<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/caramel"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectMake"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:paddingVertical="10dp"
        android:background="@color/darkBrown"></TextView>

    <EditText
        android:id="@+id/filter_make_etext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Make"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="70dp"
        android:background="@color/white"
        android:textSize="25dp"></EditText>

    <Button
        android:id="@+id/filter_make_donebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/done"
        android:textSize="25dp"
        android:backgroundTint="@color/green"
        android:layout_marginBottom="20dp"></Button>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/beige" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_name_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="@string/description"
        app:layout_constraintTop_toBottomOf="@id/top_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/date_button"
        android:layout_marginTop="50dp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/darkBrown"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/date_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="@string/date"
        app:layout_constraintTop_toBottomOf="@id/item_name_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/darkBrown"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/make_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="@string/make"
        app:layout_constraintTop_toBottomOf="@id/date_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/model_button"
        android:layout_marginTop="15dp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/darkBrown"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/model_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="@string/model"
        app:layout_constraintTop_toBottomOf="@id/make_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/serial_number_button"
        android:layout_marginTop="15dp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/darkBrown"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/serial_number_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="@string/serialNumber"
        app:layout_constraintTop_toBottomOf="@id/model_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/estimated_val_button"
        android:layout_marginTop="15dp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/darkBrown"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/estimated_val_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="@string/estValue"
        app:layout_constraintTop_toBottomOf="@id/serial_number_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/comment_button"
        android:layout_marginTop="15dp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/darkBrown"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/comment_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="@string/comment"
        app:layout_constraintTop_toBottomOf="@id/estimated_val_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/photo_button"
        android:layout_marginTop="15dp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/darkBrown"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/photo_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="@string/photos"
        app:layout_constraintTop_toBottomOf="@id/comment_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/darkBrown"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        app:cornerRadius="0dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Confirm"
        app:layout_constraintTop_toBottomOf="@id/photo_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black" />


    <RelativeLayout
        android:id="@+id/top_border"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/darkBrown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_tag_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            app:cornerRadius="0dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="Edit Tag"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="tag 1"
            android:textSize="20sp"
            app:cornerRadius="0dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/green"
            android:id="@+id/tag_display_1"
            android:layout_marginStart="135dp"
            android:layout_marginTop="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="tag 2"
            android:textSize="20sp"
            app:cornerRadius="0dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/green"
            android:id="@+id/tag_display_2"
            android:layout_marginStart="225dp"
            android:layout_marginTop="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="tag 3"
            android:textSize="20sp"
            app:cornerRadius="0dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/green"
            android:id="@+id/tag_display_3"
            android:layout_marginStart="315dp"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>